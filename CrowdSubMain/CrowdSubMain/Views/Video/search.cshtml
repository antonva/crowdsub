@model IEnumerable<CrowdSubMain.Models.video>

@{
    ViewBag.Title = "Search Results";
}

@{
    ViewBag.Message = "for a video profile";
}

<div>
    <p>Can't find your title?</p>
    @Html.ActionLink("Create Video Profile", "Create", "Video")

</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Realised</th>
            <th>Subtitle Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.video_title, "Profile", new { id = item.id })</td>
                <td>@Html.DisplayFor(modelItem => item.video_type)</td>
                <td>@Html.DisplayFor(modelItem => item.video_year_published)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>