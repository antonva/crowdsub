<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CrowdSub</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script> <!--include jquery-->
    <script src="~/Scripts/faq.js"></script><!--FAQ javasript-->
    <script src="~/Scripts/moment-with-langs.js"></script> <!--Include moment date formatting-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @* Navbar fixed to top *@
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar_fixed_top">
        <div class="container">
            <a href="/Home/Index"><img id="logo" src="~/Images/CrowdSub_Logo_V1_210x75.png" width="261" height="67" /></a> @*LOGO*@


                @* LOGIN *@
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
           </div>
    </nav>

    <div class="jumbotron">
        <div class=" container body-content" >
            <ul class="nav navbar-nav">
                <li>
                    <h2 class="message">@ViewBag.Title</h2>
                    <h4 class="message">@ViewBag.Message</h4>
                </li>
                <li>
                    @* Searchbar *@
                    <form class="navbar-form navbar-left" role="search" id="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <h5 class="message">
                        @Html.ActionLink("Top downloads", "TopDownloadedSubtitles", "Subtitle")
                        @Html.ActionLink("Recent", "recent", "Home")
                        @Html.ActionLink("Top requests", "request", "Request")</h5>
                </li>
            </ul>
        </div>
    </div>



        <div id="content">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>

        @* Navbar fixed to bottom *@
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
            <div class="container">
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "faq", "Home")</li>
                </ol>
            </div>
        </nav>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>