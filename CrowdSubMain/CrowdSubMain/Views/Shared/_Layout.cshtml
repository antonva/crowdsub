<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CrowdSub</title>
    @Scripts.Render("http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    @Styles.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css")
    @Scripts.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @* Navbar fixed to top *@
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar_fixed_top">
        <div class="container">
            <a href="/Home/Index"><img id="logo" src="~/Images/_Logo_transparent.png" width="261" height="67" /></a> @*LOGO*@
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav" id="navbar_links">
                    <li>@Html.ActionLink("Top downloads", "TopDownloadedSubtitles", "Subtitle")</li>
                    <li>@Html.ActionLink("Recent subtitles", "RecentSubtitles", "Subtitles")</li>
                    <li>@Html.ActionLink("Top requests", "top_request", "Home")</li>
                </ul>

                    @* LOGIN *@
                    <div class="navbar-collapse collapse">
                        @Html.Partial("_LoginPartial")
                    </div>
            </div>
        </div>
    </nav>

    <div class="jumbotron">
        <div class=" container body-content" >
            <ul class="nav navbar-nav">
                <li>
                    <h2 class="message">@ViewBag.Title</h2>
                    <h4 class="message">@ViewBag.Message</h4>
                </li>
                
            </ul>
            @* Searchbar *@
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "navbar-form", @id="search_bar", @role="search"}))
{ 
           
              <div id="navcontainer">
                  <ul class="list-inline">
                      <li>@Html.TextBox("title_search", "", new { @class = "form-control", @placeholder = "Search" })</li>
                      @*<li>@Html.TextBox("search", "", new { @class = "form-control", @placeholder = "Language" })</li>*@
                      <li>
                          <select name="language_search">
                              <option value="null">Language</option>
                              <option value="English">English</option>
                              <option value="Icelandic">Icelandic</option>
                          </select>
                      </li>
                      <li><button type="submit" class="btn btn-default">Search</button></li>
                  </ul>
              </div>
}
        </div>
        @*<nav class="navbar navbar-default" role="navigation">

                <ol class="list-inline">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "faq", "Home")</li>
                </ol>

        </nav>*@
    </div>

    <div id="content">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

        @* Navbar fixed to bottom *@
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
            <div class="container">
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "faq", "Home")</li>
                </ol>
            </div>
        </nav>
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

