@*@model CrowdSub.Models.SearchModel*@

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">

        @Html.ActionLink("All Requests", "all_requests", "Home")
        @Html.ActionLink("Top Downloads", "top_downloads", "Home")
        @Html.ActionLink("Top Requests", "top_requests", "Home")
        @Html.ActionLink("Recent", "recent", "Home")
        
        <div>
            @using (Html.BeginForm("index", "Home", FormMethod.Post))
            {
                @Html.TextBox("search")
                <input type="submit" value="Search" />
            }
        </div>

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Subtitle Language</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Batman</td>
                    <td>Movie</td>
                    <td>English</td>
                </tr>
                <tr>
                    <td>Spiderman</td>
                    <td>Movie</td>
                    <td>Icelandic</td>
                </tr>
                <tr>
                    <td>American Dad</td>
                    <td>TV Show</td>
                    <td>English</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>